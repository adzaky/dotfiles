#!/bin/bash
#
# mosh-gcloud - wrapper for accessing gcloud vm instance with mosh
#
#  usage :
#   $ mosh-gcloud <instance_name>
#

SELF=$(basename $0)

getInstanceIP() {
  gcloud --format="value(networkInterfaces[0].accessConfigs[0].natIP)" compute instances list
}

startInstance() {
  gcloud compute instances start $1

  sleep 5
  instance_addr=$(getInstanceIP)
  echo "$SELF: $instance_name: IP Address: $instance_addr"

  echo "$SELF: $instance_name: Starting mosh-server"
  gcloud compute ssh chaldea --command='mosh-server'
  sleep 5
}

main() {
  if [[ -z "$(which ssh)" ]]; then
    echo "$SELF: ssh is not installed, exiting."
    exit 1
  elif [[ -z "$(which mosh)" ]]; then
    echo "$SELF: mosh is not installed, exiting."
    exit 1
  elif [[ -z "$(which gcloud)" ]]; then
    echo "$SELF: gcloud cli is not installed, exiting."
    exit 1
  elif [[ -z $1 ]]; then
    echo "$SELF: Instance name is not provided, exiting."
    exit 1
  fi

  instance_name=$1
  instance_addr=$(getInstanceIP)

  if [[ -z $instance_addr ]]; then
    echo "$SELF: No instances running, starting instance $instance_name"
    startInstance $instance_name
  fi

  echo "$SELF: $instance_name: Login via mosh"
  mosh --ssh='ssh -i ~/.ssh/google_compute_engine' $USER@$instance_addr
}

main $@
